    <style>
        body.modal-open {
            margin-right: 15px;
        }

        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
            background-color: #191919;
        }

        ::-webkit-scrollbar {
            width: 6px;
            background-color: #191919;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #393939;
        }

        .container {
            width: auto !important;
        }
        /*Estilo de sidebar responsive*/
        .responsive {
            font-size: 0.95em;
            min-width: 80px;
            max-width: 80px;
            background-color: #191919;
            color: #fff;
            transition: all 0.3s;
            font-size: 0px;
            overflow-y: scroll;
            height: 100vh;
            overflow-x: hidden;
        }
            /*Scroll de sidebar*/
            .responsive::-webkit-scrollbar-track {
                -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
                background-color: #191919;
            }

            .responsive::-webkit-scrollbar {
                width: 6px;
                background-color: #191919;
            }

            .responsive::-webkit-scrollbar-thumb {
                background-color: #393939;
            }
            /*Botones de sidebar*/
            .responsive ul.components {
                padding: 0px 0;
                border-bottom: 1px solid #191919;
            }

            .responsive ul li a {
                text-decoration: none;
                padding: 10px 17px 10px 17px;
                font-size: 1.1em;
                display: block;
                color: #bbbbbb;
            }

                .responsive ul li a > i {
                    margin-right: 15px;
                    font-size: 20px;
                    width: 36px;
                    height: 36px;
                    line-height: 36px;
                    text-align: center;
                    border-radius: 4px;
                    background-color: rgba(255, 255, 255, 0.07);
                }

            .responsive ul li ul li a > i {
                padding: 0px 0px 0px 0px;
                font-size: 20px;
                width: 36px;
                height: 36px;
                line-height: 36px;
                text-align: center;
                border-radius: 4px;
                background-color: rgba(255, 255, 255, 0.07);
            }

            .responsive ul li a:hover > i {
                color: #00ccff;
                text-decoration: none;
                background-color: rgba(255, 255, 255, 0.03);
                -webkit-animation: swing ease-in-out .5s 1 alternate;
                animation: swing ease-in-out .5s 1 alternate;
            }

            .responsive ul li a i.rotate {
                margin-right: 10px;
                width: 30px;
                height: 30px;
                line-height: 30px;
                text-align: center;
                border-radius: unset;
                background-color: rgba(255, 255, 255, 0.001);
                font-size: 0px;
            }

            .responsive ul li a:hover {
                color: #ffffff;
            }

                .responsive ul li a:hover > i.rotate {
                    color: #00ccff;
                    text-decoration: none;
                    background-color: rgba(255, 255, 255, 0.001);
                    -webkit-animation: none;
                    font-size: 0px;
                }

            .responsive ul li a[aria-expanded=true] i.rotate {
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
                margin-right: 10px;
                font-size: 0px;
                width: 30px;
                height: 30px;
                line-height: 30px;
                text-align: center;
                border-radius: 1px;
                background-color: rgba(255, 255, 255, 0.001);
                -webkit-transition: -webkit-transform .3s ease;
                -webkit-transform: rotate(90deg);
                transform: rotate(90deg);
            }

            .responsive ul li a[aria-expanded=false] i.rotate {
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
                margin-right: 10px;
                font-size: 0px;
                width: 30px;
                height: 30px;
                line-height: 30px;
                text-align: center;
                border-radius: 1px;
                background-color: rgba(255, 255, 255, 0.001);
                -webkit-transition: -webkit-transform .3s ease;
            }
            /*Logo*/
            .responsive .sidebar-header {
                padding: 25px 0px 25px 0px;
                display: flex;
                justify-content: center;
                position: relative;
                align-items: center;
            }

        .logo-res {
            width: 62px;
            height: 46px;
        }
        /*Foto de usuario*/
        .avatar-edit-res {
            padding: 3px 3px 3px 3px;
            position: absolute;
            top: 0px;
            right: 0px;
            border-radius: 6px;
            background-color: rgba(255,255,255,0.0001);
            color: #ffffff;
            box-shadow: 3px 3px 9px 1px rgba(0, 0, 0, 0.72);
            font-size: 6px;
            opacity: 0.0001;
        }

            .avatar-edit-res:hover {
                padding: 3px 3px 3px 3px;
                position: absolute;
                top: 0px;
                right: 0px;
                border-radius: 6px;
                background-color: rgba(255,255,255,0.0001);
                color: #00ccff;
                box-shadow: 3px 3px 9px 1px rgba(0, 0, 0, 0.72);
                font-size: 6px;
                opacity: 1;
            }

        .file-res {
            width: 0.1px;
            height: 0.1px;
            opacity: 0;
            overflow: hidden;
            position: absolute;
            z-index: -1;
            display: none;
        }

        .edit-res {
            padding: 24px 24px 24px 24px;
            position: absolute;
            top: 0px;
            right: 13px;
            border-radius: 48px;
            background-color: rgba(255,255,255,0.0001);
            color: #ffffff;
            box-shadow: 3px 3px 9px 1px rgba(0, 0, 0, 0.72);
            font-size: 8px;
        }

            .edit-res:hover {
                cursor: pointer;
                padding: 24px 24px 24px 24px;
                position: absolute;
                top: 0px;
                right: 13px;
                border-radius: 48px;
                background-color: rgba(30,30,36,0.35);
                color: #00ccff;
                box-shadow: 3px 3px 9px 1px rgba(0, 0, 0, 0.72);
                font-size: 8px;
            }

        .avatar-res {
            width: 48px;
            height: 48px;
        }

        .clip-ellipse-res {
            clip-path: ellipse(24px 24px at center);
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ticket Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Crear Sesión", "About", "Home")</li>
                    <li>@Html.ActionLink("Iniciar Sesión", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer">
            <p>&copy; 2021 - Distribuidora Intermex </p>
        </footer>
